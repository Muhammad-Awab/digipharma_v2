<style>
    a{
        color:white;
        padding-right:1rem;
        text-decoration:none;
        
    }

</style>
<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" >Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="    btn btn-light text-black">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="text-light px-3" href="Identity/Account/Register">Register</a>
        <a class="text-light" href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
