﻿<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@ImageUploadTitle</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@ImageUploadMessage</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" style="background-color:green !important;color:white;" data-bs-dismiss="modal">Close</button>

            </div>

        </div>
    </div>
</div>

@code{
    [Parameter] public string? ImageUploadTitle { get; set; }
    [Parameter] public string? ImageUploadMessage { get; set; }
}