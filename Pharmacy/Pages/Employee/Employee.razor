@page "/employee"
@attribute [Authorize(Roles = "Admin")]
<section class="content">
    <div class="container-fluid">
        <div class="row pt-5">
            <div class="col-lg-3 col-md-6">
                <div class="card bg-light border-dark">
                    <div class="card-body text-center">
                        <i class="fas fa-exclamation-triangle fa-3x" style="color: #f39c12;"></i>
                        <p class="card-text mt-3">See Employee</p>
                    </div>
                    <div class="card-footer bg-dark text-center">
                        <a href="/employeeRecord" style="text-decoration:none" class="text-white">Click to see Employee <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card bg-light border-warning">
                    <div class="card-body text-center">
                        <i class="fas fa-file fa-3x" style="color: #FFAB00;"></i>
                        <p class="card-text mt-3">Add New Employee</p>
                    </div>
                    <div class="card-footer bg-warning text-center">
                        <a href="/employeeinfo" style="text-decoration:none" class="text-dark">Click to Add <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

