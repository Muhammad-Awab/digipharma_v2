@page "/employee"
@attribute [Authorize(Roles = "Admin")]
<div class="content-header">
    <h5 class="text-seconadry " style=" font-size: 40px; font-weight: bold;">Employee</h5>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row pt-3">
            <div class="col-lg-3 col-md-6">
                <div class="card bg-light border-danger">
                    <div class="card-body text-center">
                        <i class="fas fa-user fa-3x" style="color:#E55246"></i>
                        <p class="card-text mt-3 fw-bold fs-5">See Employee</p>
                    </div>
                    <div class="card-footer text-center" style="background-color:#E55246">
                        <a href="/employeeRecord" style="text-decoration:none" class="text-white">Click to see Employee <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card bg-light border-info">
                    <div class="card-body text-center">
                        <i class="fas fa-plus-circle fa-3x" style="color: #288AA7;"></i>
                        <p class="card-text mt-3 fw-bold fs-5">Add New Employee</p>
                    </div>
                    <div class="card-footer  text-center" style="background-color: #288AA7">
                        <a href="/employeeinfo" style="text-decoration:none" class="text-light">Click to Add <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
