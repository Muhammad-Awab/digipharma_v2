@page "/inventory"
@attribute [Authorize(Roles = "Admin,User")]
<section class="content">
    <div class="content-header">
        <h5 class="text-seconadry " style=" font-size: 40px; font-weight: bold;">Inventory</h5>
    </div>

    <div class="container-fluid">
        <div class="row pt-3">
            <div class="col-lg-3 col-md-6">
                <div class="card bg-light border-success">
                    <div class="card-body text-center">
                        <i class="fas fa-pills fa-3x " style="color: #218838;"></i>
                        <p class="card-text mt-3 fw-bold fs-5">See Medicines</p>
                    </div>
                    <div class="card-footer bg-success text-center">
                        <a href="/medicinerecord" style="text-decoration:none" class="text-white">Click to see Medicines <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card bg-light border-warning">
                    <div class="card-body text-center">
                        <i class="fas fa-exclamation-triangle fa-3x" style="color: #FFAB00;"></i>
                        <p class="card-text mt-3 fw-bold fs-5">Medicine Shortage</p>
                    </div>
                    <div class="card-footer bg-warning text-center">
                        <a href="/medicineshortage" style="text-decoration:none" class="text-dark">See Medicine Record <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card bg-light border-danger">
                    <div class="card-body text-center">
                        <i class="fas fa-plus-circle fa-3x" style="color: #dc3545;"</i>
                        <p class="card-text mt-3 fw-bold fs-5">Add New Medicine</p>
                    </div>
                    <div class="card-footer bg-danger text-center">
                        <a href="/add_medicine_record" style="text-decoration:none" class="text-dark">Click to Add <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


